<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>
    <style name="ButtonTheme" parent="android:Widget.DeviceDefault.Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">50dip</item>
        <item name="android:layout_marginRight">-2.6dip</item>
        <item name="android:layout_marginLeft">-2.6dip</item>
        <item name="android:layout_marginBottom">-2.6dip</item>
        <item name="android:layout_marginTop">-2.6dip</item>
        <item name="android:gravity">center</item>
    </style>

</resources>